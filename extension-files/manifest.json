{
  "name" : "MySnail",
  "short_name" : "üêå",
  "version" : "2.0.0",
  "version_name" : "2.0 BETA",
  "manifest_version" : 3,
  "minimum_chrome_version" : "49",
  "permissions" : ["storage"],
  "description" : "A customizable pet snail that appears on every website and file you visit with Chrome üêå",
  "homepage_url" : "https://github.com/Technology-Snail/MySnail",
  "author" : {
    "name" : "TechnologySnail",
    "email" : "email.technologysnail@gmail.com",
    "type" : "business"
  },
  "action" : {
    "default_popup" : "popup.html",
    "default_title" : "MySnail",
    "default_icon" : {
      "16" : "/icon/16.png",
      "32" : "/icon/32.png",
      "48" : "/icon/48.png",
      "128" : "/icon/128.png"
    }
  },
  "icons" : {
    "16" : "/icon/16.png",
    "32" : "/icon/32.png",
    "48" : "/icon/48.png",
    "128" : "/icon/128.png"
  },
  "options_page" : "options.html",
  "content_scripts" : [
    {
      "js" : ["snail.js"],
      "matches" : [
        "https://*/*",
        "http://*/*",
        "file://*/*"
      ]
    }
  ]
}
