{
  "name": "MySnail",
  "description": "A virtual pet snail that appears on every website you visit.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [],
  "action": {
    "default_popup": "settings.html",
    "default_icon": {
      "16": "/icon/16.png",
      "32": "/icon/32.png",
      "48": "/icon/48.png",
      "128": "/icon/128.png"
    }
  },
  "icons": {
    "16": "/icon/16.png",
    "32": "/icon/32.png",
    "48": "/icon/48.png",
    "128": "/icon/128.png"
  },
  "options_page": "settings.html",
  "content_scripts": [
    {
      "js": ["snail.js"],
      "matches": [
        "https://*/*",
        "http://*/*",
        "file://*/*"
      ]
    }
  ]
}
